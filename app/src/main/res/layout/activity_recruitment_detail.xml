<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecruitmentDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/recruitment_detail_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#75DECD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="모집글 상세"
            android:textAlignment="center"
            >
        </TextView>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/recruitment_detail_title"
        android:layout_width="212.55dp"
        android:layout_height="37dp"
        android:layout_marginStart="16.05dp"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/kr_font"
        android:textFontWeight="700"
        android:gravity="top"
        android:text="@string/recruitment_detail_title"
        android:textColor="#373839"
        android:textSize="16sp"
        android:letterSpacing="-0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="117.87dp"
        android:layout_height="12.1dp"
        android:layout_marginStart="15.15dp"
        android:layout_marginTop="98.95dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="48dp"
            android:layout_height="12dp"
            android:text="@string/recruitment_detail_date"
            android:textSize="12sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/recruitment_detail_icon"
        android:layout_width="47.37dp"
        android:layout_height="22.79dp"
        android:layout_marginEnd="16.05dp"
        android:layout_marginTop="70.81dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/recruitment_detail_icon"
        android:text="모집 중"
        android:textSize="12dp"
        android:textAlignment="center" />


</androidx.constraintlayout.widget.ConstraintLayout>